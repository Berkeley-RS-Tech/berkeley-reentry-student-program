<div class="container">
  <div class="px-4 py-3 my-5 text-center">
    <h2 class="display-5 fw-bold pb-4">Check-in to the Berkeley Reentry <br> Student Program Study Space</h2>
    <%= form_with(model: @checkin, local: true) do |f| %>
      <div class="row mb-3">
        <div class="col-md-3 offset-md-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, value: @user.first_name, class: "form-control" %>
        </div>
        <div class="col-md-3 ">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, value: @user.last_name, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-6 offset-md-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, value: @user.email, class: "form-control" %>
          <div id="emailHelp" class="form-text">Please enter your <b>Berkeley Email</b>.</div>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-6 offset-md-3">
          <%= f.label :sid, "Student ID", class: "form-label" %>
          <%= f.number_field :sid, value: @user.sid, class: "form-control" %>
        </div>
      </div>
      <%= link_to "Back", root_path, method: :get, class: "btn btn-secondary btn-lg" %>
      <%= f.submit "Submit", class: "btn btn-primary btn-lg ms-2" %>
  <% end %>
  </div>
</div>
